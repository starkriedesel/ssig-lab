%h2 Forgot your password?

= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: 'form-horizontal' }) do |f|
  = devise_error_messages!

  .form-group
    = f.label :email, class: 'control-label col-sm-2'
    .col-sm-5.col-md-4.col-lg-3
      = f.email_field :email, class: 'form-control', placeholder: 'Email'
  .form-group
    .col-sm-5.col-sm-offset-2
      = f.submit "Send me reset password instructions", class: 'btn btn-primary btn-lg'
  .form-group
    .col-sm-5.col-sm-offset-2
      = render "devise/shared/links"
